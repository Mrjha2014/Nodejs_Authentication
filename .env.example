# .env.example

# Database Configuration
# Replace with your MongoDB URI
DB_URI=mongodb://localhost:27017/myapp

# Session Secret
# Set a secret string for signing session IDs
SESSION_SECRET=your_secret_string

# Mail Configuration
# SMTP server settings
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=example@example.com
MAIL_PASS=your_email_password
MAIL_FROM='"Nodejs Auth" <noreply@example.com>'

# Google OAuth Credentials
# Replace with your Google Client ID and Secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Port
# The port your app will run on (default: 3000)
PORT=3000
