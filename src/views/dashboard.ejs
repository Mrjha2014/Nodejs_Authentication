<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- ... other head elements ... -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Dashboard</title>
</head>

<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-10">
                <% if (success && success.length> 0) { %>
                    <% success.forEach(function(message) { %>
                        <div class="alert alert-success">
                            <%= message %>
                        </div>
                        <% }); %>
                            <% } %>

                                <h1>Welcome to your Dashboard, <%= user.name %>
                                </h1>
                                <p>Email: <%= user.email %>
                                </p>

                                <% if (user && user.lastLogin) { %>
                                    <p>Last Login: <%= new Date(user.lastLogin).toLocaleString() %>
                                    </p>
                                    <% } %>

                                        <% if (user && !user.isVerified) { %>
                                            <p>Please verify your email.</p>
                                            <% } %>

                                                <% if (user && user.role) { %>
                                                    <p>Role: <%= user.role %>
                                                    </p>
                                                    <% } %>
            </div>

            <div class="col-md-1">
                <a href="/logout" class="btn btn-danger text-light  d-flex align-items-center">
                    Logout 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-box-arrow-right ml-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                        <path fill-rule="evenodd"
                            d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>

</body>

</html>